<html>
<head>
    <title>Jumping Dealership's Homepage</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/carstyles.css">
</head>
<body>
    <div class='container'>
    <h1>Jumping Car Dealership</h1>
    {% if cars is not empty %}
        <h2>Car Listing</h2>
            {% for car in cars %}
            <ul>
                <li>{{ car.getModel }}</li>
                    <ul>
                        <li>${{ car.getPrice }}</li>
                        <li>{{ car.getMiles }} miles</li>
                        <li><img src='{{ car.getImage }}'></li>
                    </ul>
            </ul>

            {% endfor %}
    {% endif %}

    <form action='/create_car' method='post'>
        <p>
        <label for='model'>Model: </label>
        <input id='model' name='model' type='text'>
        </p>

        <p>
        <label for='price'>Price: </label>
        <input id='price' name='price' type='text'>
        </p>

        <p>
        <label for='miles'>Miles: </label>
        <input id='miles' name='miles' type='text'>
        </p>

        <p>
        <label for='image'>Image: </label>
        <input id='image' name='image' type='text'>
        </p>

        <p>
        <button type='submit' class="btn-success">Add Post</button>
        </p>

    </form>
    <form action='/delete_cars' method='post'>
        <button type='submit'>Delete ALL</button>
    </form>


        <h1>Find a Car!</h1>
        <form action='search_results' method='post'>
            <div class='form-group'>
                <label for='user_price'>Enter Maximun Price:</label>
                <input id='user_price' name='user_price' class='form-control' type='number'>
            </div>
            <div class='form-group'>
                <label for='user_mileage'>Enter Maximum Mileage:</label>
                <input id='user_mileage' name='user_mileage' class='form-control' type='number'>

            <button type='submit' class='btn-success'>Submit</button>
        </form>
    </div>
</body>
</html>
